{
  "name": "tonic-image-builder",
  "description": "JavaScript library used to gather image generation based on various input data.",
  "version": "0.0.5",
  "license": "BSD-3-Clause",
  "main": "./src/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/Kitware/tonic-image-builder.git"
  },
  "dependencies": {
      "monologue.js": "0.3.3",
      "mout": "0.11.0",
      "gl-matrix": "2.3.1"
  },
  "devDependencies": {
    "tonic-site-generator": "Kitware/tonic-site-generator",

    "jshint": "2.8.0",
    "jshint-loader": "0.8.3",
    "file-loader": "0.8.4",
    "url-loader": "0.5.6",
    "babel-core": "5.8.22",
    "babel-loader": "5.3.2",
    "expose-loader": "0.7.0",
    "node-libs-browser": "0.5.2",
    "shader-loader": "1.1.3",

    "webpack": "1.11.0",

    "jasmine-core": "2.3.4",
    "karma": "0.13.9",
    "karma-cli": "0.1.0",
    "karma-jasmine": "0.3.6",
    "phantomjs": "1.9.18",
    "karma-phantomjs-launcher": "0.2.1",
    "karma-chrome-launcher": "0.2.0",
    "karma-firefox-launcher": "0.1.6",
    "karma-safari-launcher": "0.1.1",
    "serve": "1.4.0"
  },
  "scripts": {
    "build": "webpack",
    "build:debug": "webpack --display-modules",
    "build:release": "webpack -p",

    "www": "tonic-site-generator site.config.js",
    "www:http" : "tonic-site-generator site.config.js --local-test && serve docs/www",

    "test": "karma start ./tests/karma.conf.js",
    "test:chrome": "karma start ./tests/karma.conf.js --browsers Chrome --single-run",
    "test:firefox": "karma start ./tests/karma.conf.js --browsers Firefox"
  }
}
